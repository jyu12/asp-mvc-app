@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>


<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr class="table-light">
            <th>Movies</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
 {
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies/",
                    dataSrc : ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.type"
                    }
                ]
            });
        });
    </script>
}
